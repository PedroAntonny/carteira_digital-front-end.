{
  "extends": ["next/core-web-vitals"],
  "ignorePatterns": [
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.ts"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "warn",
    "no-console": [
      "warn",
      {
        "allow": ["warn", "error"]
      }
    ],
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ]
  }
}
